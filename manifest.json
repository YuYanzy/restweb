{
  "manifest_version": 2,
  "name": "restweb",
  "description": "restweb",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "restweb",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "tabs", "http://*/*", "https://*/*"
  ]
}